<body class="bg-gradient-to-br from-slate-50 to-blue-50 min-h-screen">
    <!-- Header -->
    <header class="gradient-header shadow-xl">
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
